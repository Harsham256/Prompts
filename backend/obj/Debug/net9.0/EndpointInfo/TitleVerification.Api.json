          "longitude": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fullName": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "passwordHash": {
            "type": "string",
            "nullable": true
          },
          "aadhaar": {
            "type": "string",
            "nullable": true
          },
          "pan": {
            "type": "string",
            "nullable": true
          },
          "landId": {
            "type": "string",
            "nullable": true
          },
          "latitude": {
            "type": "number",
            "format": "double"
          },
          "longitude": {
            "type": "number",
            "format": "double"
          },
          "role": {
            "$ref": "#/components/schemas/UserRole"
          },
          "loanApplications": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LoanApplication"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
